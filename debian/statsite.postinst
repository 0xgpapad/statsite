#! /bin/sh
# postinst script for statsite
#

set -e

case "$1" in
configure)

	if ! getent passwd -- statsite >/dev/null 2>&1 ; then
	adduser --home /nonexistent \
		--group \
		--system \
		--disabled-password \
		--no-create-home \
		--gecos "Debian Statsite daemon user" \
		statsite
	fi

;;
esac

#DEBHELPER#

exit 0
