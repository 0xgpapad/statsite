#
# Statsite metrics aggregation server
#

description     "statsite"

start on runlevel [2345]
stop on runlevel [!2345]

setuid statsite
setgid statsite

respawn
respawn limit 10 5
console log

pre-start script
    test -r /etc/statsite/statsite.conf || { stop; exit 1; }
end script

exec /usr/bin/statsite -f /etc/statsite/statsite.conf
